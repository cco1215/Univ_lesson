{{> layouts/header}}

<h1> 게판시 수정글 </h1>

{{#articleItem}}
<form action="/articles/update" method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">제목</label>
        <input type="hidden" name="id" value="{{id}}">
        <input value="{{title}}" type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">내용</label>
        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">확인</button>
    <button type="reset" class="btn btn-primary">취소</button>
</form>
{{/articleItem}}
{{> layouts/footer}}